@model vladandartem.Models.ViewModels.AdminMenu.CreateUserViewModel
@{
    ViewData["title"] = "Добавление пользователя";
}



<main class="container">
    <form class="regist" method="post" asp-action="Create" asp-controller="Users">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control datepicker">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</main>