@section Scripts {
    <script src="~/js/users.js"></script>
    <script src="~/js/add-category.js"></script>
}

<ul class="nav nav-pills container nav-in-pers">
    <li class="nav-item">
        <a class="nav-link active" asp-action="Main">Управление категориями</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Users">Управление пользователями</a>
    </li>
</ul>
<main class="container admin admin-categories">
    <ul class="users">
        <li><p>Категория</p><p>Действие</p></li>
        @foreach(var category in Model)
        {
            <li>
                <p>@category.Name</p>
                <div class="centering">
                    <button type="submit" class="btn btn-danger delete-user" data-toggle="modal" data-route-id="@category.Id" data-target="@("#a" + category.Id)">
                        Удалить
                    </button>
                </div>

            </li>
        }
    </ul>
    <div class="modal fade" id="" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Подтвердите действие</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6>Удалить категорию </h6>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <form method="post" asp-action="DeleteCategory">
                        <input type="hidden" name="id">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <form action="~/AdminMenu/AddCategory" method="post" class="add-new-category">
        <div class="form-group">
            <label for="add-category">Добавьте категорию</label>
            <input type="text" name="CategoryName" class="form-control" id="add-category" placeholder="Название категории">
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</main>