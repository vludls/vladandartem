@model IEnumerable<User>
<ul class="nav nav-pills container nav-in-pers">
    <li class="nav-item">
        <a class="nav-link" asp-action="Main">Управление категориями</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-action="Users">Управление пользователями</a>
    </li>

</ul>
<main class="container admin">
    <ul class="users">
        <li><p>E-mail</p><p>Год рождения</p><p>Редактирование</p><p>Удаление</p></li>
        @foreach(var user in Model)
        {
            <li>
                <p>@user.Email</p>
                <p>@user.Year</p>
                <p>
                    <a asp-action="EditUser" asp-route-id="@user.Id" data-route-id="@user.Id" class="btn btn-primary">Изменить</a>
                </p>
                <div>
                    <button type="submit" class="btn btn-danger delete-user" data-toggle="modal" data-target="@("#a" + user.Id)">
                        Удалить
                    </button>
                </div>
            </li>
            <div class="modal fade" id="@("a" + user.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Удалить пользователя</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                            <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </ul>
    <div class="create-new-user">
        <a class="btn btn-primary" asp-action="CreateUser" role="button">Создать нового пользователя</a>
    </div>
</main>

