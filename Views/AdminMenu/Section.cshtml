@model IEnumerable<vladandartem.Models.Section>

@{
    ViewData["Title"] = "View";
}

@section Scripts {
    <script src="~/js/users.js"></script>
    <script src="~/js/add-section.js"></script>
}

@Html.Partial("_GetTabs", new vladandartem.ViewModels.AdminMenu.GetTabsViewModel { SectionId = 2 })

<main class="container admin admin-categories">
    <ul class="users">
        <li><p>Раздел</p><p>Действие</p></li>
        @foreach (var item in Model)
        {
            <li id="@("s" + item.Id)">
                <p>@item.Name</p>
                <div class="centering">
                    <button type="submit" class="btn btn-danger delete-user" data-toggle="modal" data-route-id="@item.Id" data-target="@("#a" + item.Id)">
                        Удалить
                    </button>
                </div>

            </li>
        }
    </ul>
    <div class="modal fade" id="" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title">Подтвердите действие</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6></h6>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Закрыть</button>
                    <form asp-action="SectionDelete" method="post" class="section-delete">
                        <input type="hidden" name="SectionId">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="SectionAdd" method="post" class="add-new-category">
        <div class="form-group">
            <label for="add-section">Добавьте раздел</label>
            <input type="text" name="SectionName" class="form-control add-category" id="add-section" placeholder="Название раздела">
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</main>

