@model IEnumerable<vladandartem.Models.Section>

@{
    ViewData["Title"] = "View";
}

@Html.Partial("_GetTabs")

<main class="container">
    <ul class="users">
        <li><p>Категория</p><p>Действие</p></li>
        @foreach (var item in Model)
        {
            <li>
                <p>@item.Name</p>
                <div class="centering">
                    <button type="submit" class="btn btn-danger delete-user" data-toggle="modal" data-route-id="@item.Id" data-target="@("#a" + item.Id)">
                        Удалить
                    </button>
                </div>

            </li>
        }
    </ul>
</main>
@foreach (var item in Model)
{
    @item.Name

    <form asp-action="SectionDelete">
        <input type="hidden" name="SectionId" value="@item.Id">
        <input type="submit" value="Удалить">
    </form>
}

<form asp-action="SectionAdd">
    <input type="text" name="SectionName" placeholder="Название секции">
    <input type="submit" value="Добавить">
</form>

</table>
