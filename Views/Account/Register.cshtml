@model vladandartem.ViewModels.Account.RegisterViewModel

@section Scripts {
    <script src="~/js/empty-fields.js"></script>
}

<main class="container">
    <form class="regist" method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control datepicker">
            <span asp-validation-for="Year"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm" class="form-control">
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <button type="submit" class="btn btn-primary">Регистрация</button>
    </form>
</main>