@model List<vladandartem.Models.Product>
@{
    ViewData["Title"] = "Shop";
}

<main class="container lop">
    <div class="list">
        <ul>
            @foreach (Product product in Model)
            {
                <li>
                    <form action="~/Home/RemoveProductCart" method="post">
                        <input type="hidden" name="id" value="@product.Id">
                        <div class="imincart">
                            <img src="@product.ImgPath" alt="">
                        </div>
                        <p class="nameincart">
                            @product.Name
                        </p>
                        <div class="quantity">
                            <span>Количество:</span>
                            <input type="number" value="1" min="1" max="10" name="quantity" class="q" id="quantity">
                        </div>
                        <p class="priceincart">
                            <span>@product.Price</span> р.
                        </p>
                        <input type="submit" name="delfromcart" id="delfromcart" value="X">
                    </form>
                </li>
            }
        </ul>
    </div>
    <div class="continue">
        <a href="">Продолжить</a>
    </div>
</main>