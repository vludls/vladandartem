@model List<vladandartem.Models.Product>
@{
    ViewData["Title"] = "Shop";
}

<main class="container lop">
    <div class="list">
        <ul>
            @foreach (Product product in Model)
            {
                <li>
                    <form action="~/Home/RemoveProductCart" method="post">
                        <input type="hidden" name="id" value="@product.Id">
                        <div class="imincart">
                            <img src="@product.ImgPath" alt="">
                        </div>
                        <p class="nameincart">
                            @product.Name
                        </p>
                        <div class="quantity">
                            <span>Количество:</span>
                            <input type="number" value="1" min="1" max="10" name="count" class="q" id="quantity">
                        </div>
                        <p class="priceincart">
                            <span>@product.Price</span> р.
                        </p>
                        <div>
                            <input type="submit" name="delfromcart" id="delfromcart" value="X"><br>
                            <input type="image" name="save" id="save" value="S" src="~/images/save.png">
                        </div>
                    </form>
                </li>
            }
        </ul>
    </div>
    <!--<div class="continue">
        <a href="">Продолжить</a>
    </div>-->
    <form action="~/Home/CartBuy" method="post" class="continue">
        <input type="submit" value="Оплатить">
    </form>
</main>