@model IEnumerable<vladandartem.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

        
<main>
    <ul class="container">
        @foreach (var SomeProduct in Model)
        {
            <li class="product">
                <div class="img">
                    <img src="~/images/1.jpg" alt="">
                </div>
                <p class="name">
                    @SomeProduct.Name
                </p>
                <p class="price">
                    @SomeProduct.Price р.
                </p>
                <p class="cart">
                    <span>В корзину</span>
                    <img src="~/images/basket.png" alt="">
                </p>
            </li>
        }
