@model vladandartem.ViewModels.IndexViewModel
@{
ViewData["Title"] = "Shop";
}



<div id="sliderAndBar">
    <div class="container" id="inside">
        <div id="leftBar">
            <ul id="navBar">
                <li id="inf">ИНФОРМАЦИЯ</li>
                <li><a href="">О нас</a></li>
                <li><a href="">Информация о доставке</a></li>
                <li><a href="">Акции</a></li>
                <li><a href="">Услуги</a></li>
                <li><a href="">Контакты</a></li>
                <li><a href="">Блог</a></li>
            </ul>
        </div>

        <div id="mainSlider">
            <ul class="slides">
                <li>
                    <img src="~/images/slide.jpg" alt="">
                </li>
                <li>
                    <img src="~/images/slide2.jpg" alt="">
                </li>
                <li>
                    <img src="~/images/slide3.jpg" alt="">
                </li>
                <li>
                    <img src="~/images/slide4.jpg" alt="">
                </li>
            </ul>

            <div class="buttons">
                <div class="left">
                    <div class="arrowleft"></div>
                </div>
                <div class="right">
                    <div class="arrowright"></div>
                </div>
            </div>
	
        </div>
    </div>
</div>


<main>
    <ul class="container" id="products">
        @foreach (var product in Model.products)
        {
            <li>
                <div class="img">
                    <img src="@product.ImgPath" alt="">
                </div>
                <p class="name">
                    @product.Name
                </p>
                <p class="price">
                    @product.Price р.
                </p>
                <div class="links">
                    <form action="~/Home/AddCookie" method="post">
                        <input type="hidden" name="id" value="@product.Id">
                    <!--<a href="" class="cart">
                        в корзину
                    </a>-->
                    @{
                        string disabled = "disabled";
                    }
                        <input value="@(@product.Count <= 0 ? "нет в наличии" : "в корзину")" class="btn btn-primary" type="submit" @(@product.Count <= 0 ? " disabled=\"disabled\"" : "")>
                        <!--<input type="submit" value="@(@product.Count <= 0 ? "нет в наличии" : "в корзину")" class="cart" @(@product.Count <= 0 ? " disabled=\"disabled\"" : "")>-->
                    </form>
                    <!--<a href="/home/Edit?id=@product.Id" class="icons"><img src="~/images/r.png" alt=""></a>-->
                    <a href="/home/Edit?id=@product.Id" class="btn btn-primary">edit</a>

                    <form action="~/Home/RemoveProduct" method="post">
                        <input type="hidden" name="id" value="@product.Id">
                        <!--<div class="testclass"><input type="image" value="" src="~/images/d.png" width="25" height="25"></div>-->
                        <button type="submit" class="btn btn-primary">x</button>
                    </form>
                </div>
            </li>
        }
        <li id="plus">
            <a href="/home/add"></a>
            <img src="~/images/plus.png" alt="">
        </li>
    </ul>

    <ul class="container pagination pagin">
        @{  
            int i = 0;
            i = (Model.page >= 4 ? i - 2 : i);
        }
        @for (int j = 1; i < Model.pagesCount; i++, j++)
        { 
            if(j > 5) { break; }

            <li class="@(i == Model.page ? "page-item active" : "page-item")"><a class="page-link" href="~/Home/Index?Page=@i">@(i + 1)</a></li>
        }

        
    </ul>
    
</main>
