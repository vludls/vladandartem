@model vladandartem.Data.Models.Product

@{
    ViewData["Title"] = "Product";
}

@section Scripts {
    <script src="~/js/product.js"></script>
}

<main class="container product-page" id="product">
    <div>{{ product }}</div>
    <div class="header-product">
        <h1>{{ product.Name }}</h1>
        <h3><span class="badge badge-success">{{ product.Manufacturer }}</span></h3>
    </div>
    <div class="image-and-main">
        <div class="imgProd">
            <img :src="product.ImgPath" class="addimg" alt="">
        </div>
        <div class="main-info">
            
            <form asp-action="AddCookie" class="add-to-cart" method="post">
                <h2>{{ product.Price }} р.</h2>
                <input type="hidden" name="id" :value="product.Id">
                <input v-if="product.Count > 0" value="Добавить в корзину" class="btn btn-primary btn-lg btn-block" type="submit">
                <input v-else value="Нет в наличии" class="btn btn-primary btn-lg btn-block" type="button" disabled>
                <h5 class="on-stock">На складе: <span class="badge badge-success">{{ product.Count }}</span></h5>
            </form>
        </div>
    </div>
    <h1 class="header-specifications">Характеристики</h1>
    <table class="specifications" border="1">
            <tr v-for="DetailField in product.ProductDetailFields">
                <td>{{ DetailField.DetailField.Name }}</td>
                <td>{{ DetailField.DetailField.Definitions[0].Name }}</td>
            </tr>
    </table>
</main>

